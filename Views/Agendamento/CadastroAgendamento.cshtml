@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>

    <!-- Favicons -->
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-ico">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

    <!-- Estilos internos -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(to bottom, #ff7f7f, #ffffff); /* Alterei as cores do gradiente para um vermelho mais vibrante */
            color: #333;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: white;
            padding: 20px 0;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .header h1 {
                font-size: 36px;
                margin: 0;
                color: #e60000; /* Cor vermelha para o nome da empresa */
            }

        .container {
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            padding: 30px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .modal-header {
            background-color: white;
            color: red;
            border-color: #eea236;
            text-align: center;
            padding: 10px 0;
            margin-bottom: 20px;
        }

        .modal-title {
            font-size: 32px;
            margin: 0;
        }

        .form-control {
            height: 40px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 0 10px;
            width: 100%;
            margin-top: 10px;
        }

        .form-select {
            height: 40px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 0 10px;
            width: 100%;
            margin-top: 10px;
        }

        .mb-3 {
            margin-bottom: 20px;
        }

        .text-danger {
            color: red;
            font-size: 12px;
        }

        .btn-primary {
            background-color: #e60000; /* Vermelho mais escuro */
            border-color: #e60000;
            padding: 10px 20px;
            border-radius: 4px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #cc0000; /* Vermelho mais claro no hover */
                border-color: #cc0000;
            }

        .form-check {
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <!-- Cabeçalho com logo e nome da empresa -->
    <div class="header">
        <a href="#home" style="text-decoration: none; color: #e60000; display: inline-flex; align-items: center;">
            <img src="~/images/Home/logo.jpg" alt="MIGHTVR Logo" style="width: 100px; height: 100px; margin-right: 10px;">
            <h1>MARYNSINO</h1>
        </a>
    </div>

    <div class="container">
        <div class="modal-header">
            <h1 class="modal-title">Adicionar Agendamento</h1>
        </div>

        <div class="modal-body">
            <form>
                <p class="text-danger">Campos com * vermelho são obrigatórios</p>
                <div class="mb-3 row">
                    <div class="col-md-6">
                        <input id="Nome" type="text" class="form-control" placeholder="Nome do Cliente">
                        <span class="text-danger">*</span>
                    </div>
                    <div class="col-md-6">
                        <select id="Servico" class="form-select">
                            <option value="">Escolha o Serviço</option>
                            <option value="VolumeBrasileiro">Cursos técnicos</option>
                            <option value="Volume5D">Professores particulares</option>
                            <option value="EfeitoSirene">Reforços</option>
                            <option value="VolumeExpress">Cursinho vestibular</option>
                            <option value="HidraGloss">Cursos certificados</option>
                            <option value="HidraGloss">Educação a Distância</option>
                        </select>
                        <span class="text-danger">*</span>
                    </div>
                </div>

                <!-- Checkboxes de horários com texto vermelho -->
                <div class="mb-3">
                    <div class="form-check">
                        <input type="checkbox" id="chk08M" class="form-check-input" value="08:00" disabled>
                        <label class="form-check-label" for="chk08M">Atendimento das 8:00</label>
                        <span class="text-danger"> - Indisponível</span>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" id="chk10M" class="form-check-input" value="10:00" disabled>
                        <label class="form-check-label" for="chk10M">Atendimento das 10:00</label>
                        <span class="text-danger"> - Indisponível</span>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" id="chk13M" class="form-check-input" value="13:00" disabled>
                        <label class="form-check-label" for="chk13M">Atendimento das 13:00</label>
                        <span class="text-danger"> - Indisponível</span>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" id="chk15M" class="form-check-input" value="15:00" disabled>
                        <label class="form-check-label" for="chk15M">Atendimento das 15:00</label>
                        <span class="text-danger"> - Indisponível</span>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" id="chk17M" class="form-check-input" value="17:00" disabled>
                        <label class="form-check-label" for="chk17M">Atendimento das 17:00</label>
                        <span class="text-danger"> - Indisponível</span>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" id="chk19M" class="form-check-input" value="19:00" disabled>
                        <label class="form-check-label" for="chk19M">Atendimento das 19:00</label>
                        <span class="text-danger"> - Indisponível</span>
                    </div>
                </div>
                <!-- Fim dos checkboxes de horários -->

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="window.location.href = '/Home/Index';">Voltar</button>
                    <button type="button" class="btn btn-primary" onclick="InserirAgendamento()">Adicionar</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function InserirAgendamento() {
            // Lógica para inserir o agendamento aqui
            alert("Agendamento adicionado com sucesso!");
        }
    </script>
</body>

</html>
